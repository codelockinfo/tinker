{% comment %}
Icon Cards with Separate Alignment + Padding + Icon Alignment + Cards Per View
{% endcomment %}

<section
  class="icon-cards-section"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 20px;
    padding-right: 20px;
  "
>
  <div
    class="icon-cards-container"
    style="max-width: {{ section.settings.container_width }}px;"
  >

    {% if section.settings.heading != blank %}
      <div
        class="section-heading"
        style="
          font-size: {{ section.settings.heading_font_size }}px;
          text-align: {{ section.settings.heading_alignment }};
        "
      >
        {{ section.settings.heading }}
      </div>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div
        class="section-subheading"
        style="
          font-size: {{ section.settings.subheading_font_size }}px;
          text-align: {{ section.settings.heading_alignment }};
        "
      >
        {{ section.settings.subheading }}
      </div>
    {% endif %}

    <div
      class="icon-cards-grid"
      style="grid-template-columns: repeat({{ section.settings.cards_per_row }}, 1fr);"
    >
      {% for block in section.blocks %}
        <div
          class="icon-card"
          style="text-align: {{ section.settings.card_alignment }};"
        >

          {% if block.settings.icon != blank %}
            <div
              class="icon-wrapper"
              style="justify-self: {{ section.settings.icon_alignment }};"
            >
              <img
                src="{{ block.settings.icon | image_url }}"
                alt=""
                style="width: {{ section.settings.icon_size }}px;"
              >
            </div>
          {% endif %}

          <h3 style="font-size: {{ section.settings.card_heading_size }}px;">
            {{ block.settings.heading }}
          </h3>

          <p style="font-size: {{ section.settings.text_size }}px;">
            {{ block.settings.text }}
          </p>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.icon-cards-container {
  margin: 0 auto;
}

.section-heading {
  font-weight: 600;
  margin-bottom: 10px;
}

.section-subheading {
  margin-bottom: 40px;
  color: #555;
}

.icon-cards-grid {
  display: grid;
  gap: 24px;
}

.icon-card {
  background: #fff;
  padding: 32px 24px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.icon-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 40px rgba(0,0,0,0.12);
}

.icon-wrapper {
  margin-bottom: 16px;
}

.icon-card h3 {
  margin-bottom: 12px;
  font-weight: 600;
}

.icon-card p {
  color: #555;
  line-height: 1.6;
}

/* Tablet */
@media (max-width: 1024px) {
  .icon-cards-grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .icon-cards-grid {
    grid-template-columns: 1fr !important;
  }
}
</style>

{% schema %}
{
  "name": "Icon Cards",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 60
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "Container Width",
      "options": [
        { "value": "1440", "label": "1440px" },
        { "value": "1990", "label": "1990px (Full width)" }
      ],
      "default": "1440"
    },
    {
      "type": "range",
      "id": "cards_per_row",
      "label": "Cards Per Row (Desktop)",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "card_alignment",
      "label": "Card Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "icon_alignment",
      "label": "Icon Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Section Heading",
      "default": "<p><strong>Health Benefits of Cold Pressed Oils</strong></p>"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size",
      "min": 20,
      "max": 48,
      "step": 1,
      "default": 32
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "<p>Pure, natural oils that support a healthier lifestyle</p>"
    },
    {
      "type": "range",
      "id": "subheading_font_size",
      "label": "Subheading Font Size",
      "min": 14,
      "max": 26,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 30,
      "max": 100,
      "step": 2,
      "default": 48
    },
    {
      "type": "range",
      "id": "card_heading_size",
      "label": "Card Heading Size",
      "min": 16,
      "max": 30,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Card Text Size",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Card Heading",
          "default": "Improving immunity"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Card Description",
          "default": "Card description text"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Icon Cards",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
