<section class="custom-image-overlay-grid">
  <div class="page-width">
    <div class="grid-container count-{{ section.blocks.size }}">

      {% if section.blocks.size == 5 %}
        <!-- For 5 images: first big left, 4 smaller right -->
        <div class="big-image">
          {% assign first_block = section.blocks.first %}
          {% if first_block.settings.image %}
            <div class="image-wrapper">
              <img src="{{ first_block.settings.image | img_url: 'master' }}" alt="{{ first_block.settings.heading }}" />
              <div class="overlay content-align-{{ section.settings.content_align }}">
                {% if first_block.settings.heading != blank %}
                  <h3>{{ first_block.settings.heading }}</h3>
                {% endif %}
                {% if first_block.settings.text != blank %}
                  <p>{{ first_block.settings.text }}</p>
                {% endif %}
                {% if first_block.settings.button_text != blank and first_block.settings.button_url != blank %}
                  <a href="{{ first_block.settings.button_url }}" class="btn" style="background-color: {{ first_block.settings.button_color }};">{{ first_block.settings.button_text }}</a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>

        <div class="small-grid">
          {% for block in section.blocks offset:1 %}
            {% if block.settings.image %}
              <div class="small-image image-wrapper">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}" />
                <div class="overlay content-align-{{ section.settings.content_align }}">
                  {% if block.settings.heading != blank %}
                    <h3>{{ block.settings.heading }}</h3>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p>{{ block.settings.text }}</p>
                  {% endif %}
                  {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                    <a href="{{ block.settings.button_url }}" class="btn" style="background-color: {{ block.settings.button_color }};">{{ block.settings.button_text }}</a>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

      {% else %}
        <!-- 2,3,4 images normal grid -->
        {% for block in section.blocks %}
          {% if block.settings.image %}
            <div class="grid-item image-wrapper">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}" />
              <div class="overlay content-align-{{ section.settings.content_align }}">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p>{{ block.settings.text }}</p>
                {% endif %}
                {% if block.settings.button_text != blank and block.settings.button_url != blank %}
                  <a href="{{ block.settings.button_url }}" class="btn" style="background-color: {{ block.settings.button_color }};">{{ block.settings.button_text }}</a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}

    </div>
  </div>

  <style>
    .custom-image-overlay-grid .grid-container {
      display: grid;
      gap: 16px;
      margin: 40px 0;
    }

    /* 2 images: 2 columns */
    .custom-image-overlay-grid .count-2 {
      grid-template-columns: repeat(2, 1fr);
    }

    /* 3 images: 3 columns */
    .custom-image-overlay-grid .count-3 {
      grid-template-columns: repeat(3, 1fr);
    }

    /* 4 images: 2x2 grid */
    .custom-image-overlay-grid .count-4 {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 250px;
    }

    .custom-image-overlay-grid .count-4 .grid-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
      display: block;
    }

    /* 5 images special */
    .custom-image-overlay-grid .count-5 {
      grid-template-columns: 2fr 3fr;
      grid-template-rows: 900px;
      gap: 16px;
    }

    /* Big image */
    .custom-image-overlay-grid .count-5 .big-image .image-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
      display: block;
    }

    /* Small grid 4 images */
    .custom-image-overlay-grid .count-5 .small-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 16px;
      height: 100%;
    }

    .custom-image-overlay-grid .count-5 .small-grid .image-wrapper img {
      width: 100%;
      object-fit: cover;
      border-radius: 8px;
      display: block;
    }

    /* Image wrapper position relative */
    .image-wrapper {
      position: relative;
      overflow: hidden;
      border-radius: 8px;
      height: 100%;
    }

    /* Overlay */
    .overlay {
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.45);
      color: #fff;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 8px;
      border-radius: 8px;
    }

    /* Content alignment */
    .content-align-left {
      text-align: left;
      align-items: flex-start;
    }

    .content-align-center {
      text-align: center;
      align-items: center;
    }

    .content-align-right {
      text-align: right;
      align-items: flex-end;
    }

    /* Text styles */
    .overlay h3 {
      margin: 0;
      font-size: 1.8rem;
      font-weight: 700;
    }

    .overlay p {
      margin: 0;
      font-size: 1rem;
    }

    /* Button */
    .overlay .btn {
      align-self: start;
      padding: 10px 20px;
      text-decoration: none;
      color: #fff;
      border-radius: 4px;
      font-weight: 600;
      transition: background-color 0.3s ease;
    }

    /* Align button with content alignment */
    .content-align-center .btn {
      align-self: center;
    }

    .content-align-right .btn {
      align-self: flex-end;
    }

    .overlay .btn:hover {
      filter: brightness(90%);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .custom-image-overlay-grid .grid-container {
        grid-template-columns: 1fr !important;
        grid-auto-rows: 300px;
      }
      .custom-image-overlay-grid .count-5 {
        grid-template-columns: 1fr !important;
        grid-template-rows: auto !important;
      }
      .custom-image-overlay-grid .small-grid {
        grid-template-columns: repeat(2, 1fr) !important;
        grid-template-rows: auto !important;
      }
      .overlay {
        padding: 15px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "grid collection",
  "max_blocks": 5,
  "settings": [
    {
      "type": "select",
      "id": "content_align",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image_content",
      "name": "Image with Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading Text"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Some description text goes here."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "/collections/all"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "grid collection"
    }
  ]
}
{% endschema %}
