          </svg>
        </a>
      </div>
    </div>

    <!-- Map -->
    {% if section.settings.map_embed != blank %}
      <div class="map-wrapper">
        {{ section.settings.map_embed }}
      </div>
    {% endif %}

  </div>
</section>

<style>
  .social-icon {
    width: 42px;
    height: 42px;
    background-color: #006dc9;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  .social-icon svg {
    width: 18px;
    height: 18px;
    fill: #fff; 
  }
  .social-icon-instagram{
     background-color: #000000;
  }
  .social-icon-youtube{
     background-color: #d31c29;
  }
  .social-icon:hover {
    background-color: #004f96;
    transform: translateY(-2px);
  }
  
  .contact-section {
    padding: 60px 20px;
    background: #f7f7f7;
  }
  .contact-container {
    margin: 0 auto;
  }
  .contact-heading {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 30px;
  }
  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 30px;
  }
  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 12px;
    margin-bottom: 14px;
    border: 1px solid #ddd;
    background-color: #fff;
    color: #000 !important; /* TEXT VISIBILITY FIX */
  }
  .contact-form input::placeholder,
  .contact-form textarea::placeholder {
    color: #999;
    opacity: 1;
  }
  .contact-form textarea {
    min-height: 120px;  
  }
  .contact-form button {
    font-weight: 600;
    background: #006dc9;
    color: #fff;
    border: none;
    padding: 19px 31px;
    cursor: pointer;
    font-size: 16px;
  }
  .two-col {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
  }
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .info-card {
    background: #fff;
    padding: 18px;
    display: flex;
    gap: 14px;
    align-items: flex-start;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    transition: all 0.3s ease;  
  }
  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.15);
  }
  .info-icon {
    min-width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .info-icon img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  .info-content h4 {
    margin: 0 0 6px;
    font-size: 18px;
    font-weight: 600;
  }
  .info-card p{
    font-size: 16px;
  }
  .social-media {
    text-align: center;
    margin: 50px 0 0px;
  }
  .social-icons a {
    margin: 0 10px;
    text-decoration: none;
    font-weight: 500;
    color: #000;
  }
  .map-wrapper iframe {
    width: 100%;
    height: 350px;
    border-radius: 14px;
    border: none;
    margin-top: 30px;
  }
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    .two-col {
      grid-template-columns: 1fr;
    }
  }

  /* MOBILE INFO CARD FIX */
@media (max-width: 600px) {
  .info-card {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .info-icon {
    margin-bottom: 10px;
  }

  .info-content h4 {
    font-size: 17px;
  }

  .info-card p {
    font-size: 15px;
    line-height: 1.5;
  }
}

</style>

{% schema %}
{
  "name": "Contact + Map Section",
  "settings": [
    {
      "type": "select",
      "id": "container_width",
      "label": "Container Width",
      "options": [
        { "value": "1440", "label": "1440px" },
        { "value": "1990", "label": "1990px" }
      ],
      "default": "1440"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Get In Touch</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Send Your Message"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "linkedin",
      "label": "LinkedIn URL"
    },
    {
      "type": "html",
      "id": "map_embed",
      "label": "Google Map Embed iframe"
    }
  ],
  "blocks": [
    {
      "type": "info",
      "name": "Info Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Office Address"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Your address here</p>"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Contact with Map & Cards",
      "blocks": [
        { "type": "info" },
        { "type": "info" },
        { "type": "info" }
      ]
    }
  ]
}
{% endschema %}
