<section class="contact-section">
  <div class="contact-container" style="max-width: {{ section.settings.container_width }}px;">

    <!-- Heading -->
    <div class="contact-heading">
      {{ section.settings.heading }}
    </div>

    <div class="contact-grid">

      <!-- Contact Form -->
      <div class="contact-form">
        {% form 'contact' %}
          <input type="text" name="contact[name]" placeholder="Name" required>

          <div class="two-col">
            <input type="tel" name="contact[phone]" placeholder="Contact Number">
            <input type="email" name="contact[email]" placeholder="Email" required>
          </div>

          <input type="text" name="contact[subject]" placeholder="Subject">

          <textarea
            name="contact[body]"
            placeholder="Please provide details about your inquiry or request."
          ></textarea>

          <button type="submit">
            {{ section.settings.button_text }}
          </button>
        {% endform %}
      </div>

      <!-- Info Cards -->
      <div class="contact-info">
        {% for block in section.blocks %}
          <div class="info-card">

            {% if block.settings.icon_image != blank %}
              <div class="info-icon">
                <img
                  src="{{ block.settings.icon_image | image_url: width: 80 }}"
                  alt="{{ block.settings.title }}"
                  loading="lazy"
                >
              </div>
            {% endif %}

            <div class="info-content">
              <h4>{{ block.settings.title }}</h4>
              {{ block.settings.content }}
            </div>

          </div>
        {% endfor %}
      </div>

    </div>

    <!-- Social Media -->
    <div class="social-media">
      <h3>Social Media</h3>
      <div class="social-icons">
        <a href="{{ section.settings.facebook }}" target="_blank" class="social-icon">
